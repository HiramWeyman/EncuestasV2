@model EncuestasV2.Models.encuaesta_periodo

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <h2>Editar Periodo</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <div style="height:500px;margin-left:10px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.periodo_id)

        <div class="form-group">
            <label class="control-label col-md-2">Descripción</label>
            @*@Html.LabelFor(model => model.periodo_desc, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.periodo_desc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.periodo_desc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-2">Estatus</label>
            @*@Html.LabelFor(model => model.periodo_estatus, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.periodo_estatus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.periodo_estatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar Periodo" class="btn btn-default" />
                @Html.ActionLink("Lista de Periodos", "Index", "encuaesta_periodo", new { @class = "btn btn-primary my-2 my-sm-0 " })

            </div>
        </div>
    </div>
        
 </div>
    }


</body>
</html>
